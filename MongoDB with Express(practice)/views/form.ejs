<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New chat</title>
    <link rel="stylesheet" href="/form.css">
</head>
<body>
    <div class="container">
      <div class="wrapper">
          <form action="/chat" method="post">
          <h1>Add new chat</h1>
          <div class="input-box">
              <input type="text" placeholder="From" name="from" required>
              <i class='bx bxs-user'></i>
      </div>
      <div class="input-box">
          <input type="text" placeholder="TO" name="to" required>
          <i class='bx bxs-lock-alt'></i>
      </div>
      <div class="input-box">
        <textarea name="message" id="" placeholder="Enter your message"></textarea>
        <i class='bx bxs-lock-alt'></i>
    </div>
      <dive class="remember-forget">     
  
  </dive><br>
  <button type="submit" class="btn">add new chat</button>
  
  </form>
  </div>
    </div>
  </body>
